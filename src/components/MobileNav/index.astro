---
import styles from "./MobileNav.module.css";
const path = Astro.url.pathname;
const basePath = import.meta.env.BASE_URL || "/";
const { planet } = Astro.props;

const color = planet.color;
---

<div class={styles.MobileNav} id="mobile-menu">
  <nav class={styles.Navigation}>
    <a
      href=`${basePath}planets/mercury`
      class={`${styles.Item} ${path.endsWith("/mercury") ? `act` : ""}`}
      data-astro-prefetch
    >
      <div class={styles.ItemLeft}>
        <div class={styles.Ball} style="background-color: var(--teal-blue)">
        </div>
        <h4>MERCURY</h4>
      </div>
      <img src="/planets-facts/images/icon-chevron.svg" alt="arrow" />
    </a>
    <a
      href=`${basePath}planets/venus`
      class={`${styles.Item} ${path.endsWith("/venus") ? `act` : ""}`}
      data-astro-prefetch
    >
      <div class={styles.ItemLeft}>
        <div class={styles.Ball} style="background-color: var(--yellow)"></div>
        <h4>VENUS</h4>
      </div>
      <img src="/planets-facts/images/icon-chevron.svg" alt="arrow" />
    </a>
    <a
      href=`${basePath}planets/earth`
